{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:kotlinMonorepo"
  ],
  "commitMessagePrefix": "REN - ",
  "automerge": true,
  "platformAutomerge": true,
  "rebaseWhen": "never",
  "labels": ["dependencies"],
  "enabledManagers": [
    "gradle",
    "gradle-wrapper",
    "github-actions"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "org.jetbrains.compose"
      ],
      "allowedVersions": "^\\d+\\.\\d+\\.\\d+$"
    }
  ]
}
